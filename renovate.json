{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kubernetes": {
    "fileMatch": [
      ".+\\.yaml$"
    ],
    "ignorePaths": [
      "**/vendor/**",
      "kgtkr/anontown/mongo.yaml"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackagePrefixes": [
        "ghcr.io/kgtkr/"
      ],
      "versioning": "regex:^(?<minor>\\d{17})-[0-9a-f]{7}(-(?<compatibility>.*))?$"
    },
    {
      "matchPackageNames": [
        "ghcr.io/kgtkr/kgtkr.net"
      ],
      "automerge": true
    }
  ],
  "major": {
    "enabled": false
  }
}
